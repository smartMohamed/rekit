@require '../_vars'

coupon-popup-mixin()
  // width calc(100vw - 150px)
  max-width 480px
  text-align center

  // @media (min-width: $bp-sm)
  // width calc(80vw - 150px)
  & &__title
    margin-top 25px

    // font-size 5rem !important
    @media (max-width: 420px)
      font-size 3.5rem
      margin-top 0

  & &__img
    display block
    width 100%
    max-width 234px
    height auto
    margin 30px auto 40px auto

  & &__txt
    font-size 3rem
    line-height 1.33
    color #414141
    margin-bottom 25px
    text-align center

    &__code
      display inline-block
      color #fff
      background #f18713
      padding 5px 12px
      border-radius 8px

  & &__btn
    max-width 370px
    margin 0 auto
    overflow hidden

  & &__close
    display inline-block
    margin-top 15px
    font-size 1.8rem
    line-height 1.33
    color #2f82c4
    cursor pointer

.fk-coupon-popup
  coupon-popup-mixin()