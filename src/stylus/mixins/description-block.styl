@import '../_vars'
$text-color = #414141

description-block-mixin()
  & &--hide
    @media(max-width $bp-sm - 1)
      display none
  &__content
    font-size       20px
    line-height     30px
    color           $text-color
    li
      padding-left  20px
      position      relative
      &:before
        content     '\25CF'
        display     block
        position    absolute
        left        4px
        font-size   12px
      dd
      .description-span
        font-size   16px
        line-height 20px
